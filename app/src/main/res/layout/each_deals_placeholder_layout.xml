<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_16">

    <View
        android:id="@+id/loading_deal_item_image"
        android:layout_width="@dimen/deal_list_item_image_size"
        android:layout_height="@dimen/deal_list_item_image_size"
        android:layout_marginStart="16dp"
        android:background="@color/light_gray_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/deal_item_sale_price"
        android:layout_width="@dimen/dimen_48"
        android:layout_height="@dimen/dimen_16"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_16"
        android:background="@color/light_gray_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loading_deal_item_image" />

    <View
        android:id="@+id/deal_item_reg_price"
        android:layout_width="@dimen/dimen_48"
        android:layout_height="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_16"
        android:background="@color/light_gray_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loading_deal_item_image" />


    <View
        android:id="@+id/loading_deal_item_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:background="@color/light_gray_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/deal_item_sale_price"
        app:layout_constraintTop_toBottomOf="@id/deal_item_sale_price" />


    <View
        android:id="@+id/deal_item_desc"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:background="@color/light_gray_color"
        app:layout_constraintEnd_toEndOf="@id/loading_deal_item_title"
        app:layout_constraintStart_toStartOf="@id/loading_deal_item_title"
        app:layout_constraintTop_toBottomOf="@id/loading_deal_item_title" />

    <View
        android:id="@+id/deal_item_desc2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_8"
        android:background="@color/light_gray_color"
        app:layout_constraintEnd_toEndOf="@id/loading_deal_item_title"
        app:layout_constraintStart_toStartOf="@id/loading_deal_item_title"
        app:layout_constraintTop_toBottomOf="@id/deal_item_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>